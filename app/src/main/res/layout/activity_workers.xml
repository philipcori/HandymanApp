<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eejohnsonscu.handi2.Workers"><![CDATA[

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">



    ]]>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills needed:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="105dp"
        android:layout_height="72dp"
        android:layout_alignEnd="@+id/textInputLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textInputLayout"
        android:layout_marginBottom="16dp"
        android:onClick="jumpToPageWorkerProfiles"
        android:text="Find workers"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="423dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:text="Heavy lifting"
        android:onClick="addSkills"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="427dp"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:text="Plumbing"
        android:onClick="addSkills"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="427dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:text="Electrical"
        android:onClick="addSkills"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="427dp"
        android:layout_below="@+id/checkBox6"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Use power tools"
        android:onClick="addSkills"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="353dp"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Use basic tools"
        android:onClick="addSkills"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="390dp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:text="Computer knowledge"
        android:onClick="addSkills"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="316dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp"
        android:id="@+id/textInputLayout">

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:hint="What is the job?" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="How much are you willing to offer?"
        android:inputType="number"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

</RelativeLayout>
